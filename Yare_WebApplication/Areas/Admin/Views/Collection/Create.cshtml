@* @using Yare.Models;
@model Collection *@
@using Yare.Models.Enums;
@using Yare.Models.ViewModels;
@model CollectionVM

@{
    ViewData["Title"] = "Create collection";
}
<div class="breadcrumbs" style="padding-bottom:10px;">
    <a asp-area="Admin" asp-controller="Collection" asp-action="Index">Collection</a>
    <span>/</span>
    <a><b>Create</b> Collection</a>
</div>
<h4 class="text-black">Create collection</h4>
<hr />
<form asp-action="Create" method="post" class="">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div id="adminCardContainer">

        <div class="form-group">
            <label asp-for="CollectionName" class="control-label text-black"></label>
            <input asp-for="CollectionName" class="form-control text-black border-dark" />
            <span asp-validation-for="CollectionName" class="text-danger"></span>
        </div>

    </div>

    <input type="submit" value="Create" class="admin-btn btn btn-dark text-white" style="position:fixed;right:25px;bottom:20px;" />

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
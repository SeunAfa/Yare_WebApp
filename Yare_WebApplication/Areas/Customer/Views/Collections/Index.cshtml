        // Collection Scroll Effect Component
        function collectionPgScrollEffect() {

            const collectionListPgElements = ['.collectionsList-Item'];

            collectionListPgElements.forEach(homePgElement => {
                gsap.utils.toArray(collectionListPgElements).forEach(element => {
                    let tl = gsap.timeline({
                        scrollTrigger: {
                            trigger: element,
                            start: window.innerHeight.bottom,
                            end: 'bottom ' + (window.innerHeight - 50) + 'px',
                            scrub: true,
                            //markers: true,
                        }
                    });
                    tl.from(element, { ease: 'power3.out', y: 200, opacity: 0, });
                });
            });

        }

    </script>


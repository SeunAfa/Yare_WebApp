@using Yare.Models.Enums;
@using Yare.Models;
@model Yare.Models.ViewModels.HomePgVM

@{
    ViewData["Title"] = "Home";

    // Filter the products by the product category
    var watchProducts = Model.ProductVM.objProductList
                        .Where(p => p.ProductCategory == ProductCategory.Watch)
                        .ToList();

    var jewelleryProducts = Model.ProductVM.objProductList
                            .Where(p => p.ProductCategory == ProductCategory.Jewellery)
                            .ToList();

    // Calculate the total number of rows needed for watches
    int totalWatchProducts = watchProducts.Count();
    int watchRows = (int)Math.Ceiling(totalWatchProducts / 4.0);
    watchRows = watchRows > 2 ? 2 : watchRows; // Ensure a maximum of 2 rows

    // Calculate the total number of rows needed for jewellery
    int totalJewelleryProducts = jewelleryProducts.Count();
    int jewelleryRows = (int)Math.Ceiling(totalJewelleryProducts / 4.0);
    jewelleryRows = jewelleryRows > 2 ? 2 : jewelleryRows; // Ensure a maximum of 2 rows
}

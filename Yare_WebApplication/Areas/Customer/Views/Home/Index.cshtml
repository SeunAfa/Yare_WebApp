    <script>

        ///////////////////////////////////
        // _Layout Searchbar Component
        const filterUrl = '@Url.Action("Filter", "Home")';

        ///////////////////////////////////
        // HomePg Scroll Effect Component
        function homePgScrollEffect() {

            gsap.registerPlugin(ScrollTrigger);

            const homePgElements = ['.productCard-sliderControls-Container-WatchProducts', '#watchBrands-topItem-Container', '#watchBrands-bottomItem-Container', '.productCard-sliderControls-Container-JewelleryProducts', '.collection-product-Item'];

            homePgElements.forEach(homePgElement => {
                gsap.utils.toArray(homePgElement).forEach(element => {
                    let tl = gsap.timeline({
                        scrollTrigger: {
                            trigger: element,
                            start: window.innerHeight.bottom,
                            end: 'bottom ' + (window.innerHeight - 70) + 'px',
                            scrub: true,
                            //markers:true,
                        }
                    });
                    tl.from(element, { ease: 'power3.out', y: 200, opacity: 0, });
                });
            });

        }
 
        ///////////////////////////////////
        // HomePg Slider Component
        const slider = function () {
            const createSlider = (slidesClass, btnLeftClass, btnRightClass, dotContainerClass) => {
                const slides = document.querySelectorAll(slidesClass);
                const btnLeft = document.querySelector(btnLeftClass);
                const btnRight = document.querySelector(btnRightClass);
                const dotContainer = document.querySelector(dotContainerClass);

                let curSlide = 0;
                const maxSlide = slides.length;

                //Create indicators
                const createDots = function () {
                    slides.forEach(function (_, i) {
                        dotContainer.insertAdjacentHTML(
                            'beforeend',
                            `<button class="dots__dot-hmPg" data-slide="${i}"></button>`
                        );
                    });
                };

                const activateDot = function (dotContainer, slide) {
                    dotContainer
                        .querySelectorAll('.dots__dot-hmPg')
                        .forEach(dot => dot.classList.remove('dots__dot-hmPg--active'));

                    dotContainer
                        .querySelector(`.dots__dot-hmPg[data-slide="${slide}"]`)
                        .classList.add('dots__dot-hmPg--active');
                };

                const goToSlide = function (slide) {
                    slides.forEach(
                        (s, i) => (s.style.transform = `translateX(${100 * (i - slide)}%)`)
                    );
                };

                //Next slide
                const nextSlide = function () {
                    if (curSlide === maxSlide - 1) {
                        curSlide = 0;
                    } else {
                        curSlide++;
                    }

                    goToSlide(curSlide);
                    activateDot(dotContainer, curSlide);
                };

                const prevSlide = function () {
                    if (curSlide === 0) {
                        curSlide = maxSlide - 1;
                    } else {
                        curSlide--;
                    }
                    goToSlide(curSlide);
                    activateDot(dotContainer, curSlide);
                };

                const init = function () {
                    goToSlide(0);
                    createDots();

                    activateDot(dotContainer, 0);
                };
                init();

                //Event handlers
                btnRight.addEventListener('click', nextSlide);
                btnLeft.addEventListener('click', prevSlide);

                document.addEventListener('keydown', function (e) {
                    if (e.key === 'ArrowLeft') prevSlide();
                    e.key === 'ArrowRight' && nextSlide();
                });

                dotContainer.addEventListener('click', function (e) {
                    if (e.target.classList.contains('dots__dot-hmPg')) {
                        const { slide } = e.target.dataset;
                        goToSlide(slide);
                        activateDot(dotContainer, slide);
                    }
                });
            };

            createSlider('.slide-hmPg', '.slider__btn--left-hmPg', '.slider__btn--right-hmPg', '.dots-hmPg');
        };

        slider();

        ///////////////////////////////////
        // HomePg Category Component
        const categoryItems = document.querySelectorAll(".categoryItem");
        const categoryItem_MediaContainer = document.querySelectorAll(".categoryItem-Media-Container");

        categoryItems.forEach((item, index) => {

            item.addEventListener("mouseleave", () => {

                categoryItem_MediaContainer[index].classList.remove("categoryItem-Media-ContainerActive");

            });

            item.addEventListener("mouseover", () => {

                categoryItem_MediaContainer[index].classList.add("categoryItem-Media-ContainerActive");

            });

        });

        ///////////////////////////////////////////////////
        //HomePg jewelleryCategory eachItem Component
        const jewelleryCategory_eachItemContainer = document.querySelectorAll(".jewelleryCategory-eachItem-Container");

        const jewelleryCategory_eachItem_ImgContainer = document.querySelectorAll(".jewelleryCategory-eachItem-ImgContainer");
        const jewelleryCategory_Title = document.querySelectorAll(".jewelleryCategory-Title");
        const jewelleryCategory_eachItem_Links = document.querySelectorAll(".jewelleryCategory-eachItem-Links");

        jewelleryCategory_eachItemContainer.forEach((item, index) => {

            item.addEventListener("mouseleave", () => {

                jewelleryCategory_eachItem_ImgContainer[index].classList.remove("jewelleryCategory-eachItem-ImgContainerActive");
                jewelleryCategory_Title[index].classList.remove("jewelleryCategory-titleActive");
                jewelleryCategory_eachItem_Links[index].classList.remove("jewelleryCategory-linksActive");

            });

            item.addEventListener("mouseover", () => {

                jewelleryCategory_eachItem_ImgContainer[index].classList.add("jewelleryCategory-eachItem-ImgContainerActive");
                jewelleryCategory_Title[index].classList.add("jewelleryCategory-titleActive");
                jewelleryCategory_eachItem_Links[index].classList.add("jewelleryCategory-linksActive");

            });
        })

    </script>

